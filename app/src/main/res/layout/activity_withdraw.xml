<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/Home_upp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/home"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/App_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/calistoga"
            android:gravity="center|top"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Vertex"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/points_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/rupee" />

            <TextView
                android:id="@+id/Point_textview"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:fontFamily="@font/calistoga"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Withdrawal Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/withdrawalSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calistoga"
                android:text="Withdrawal"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/withdrawId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calistoga"
                android:hint="Enter UPI"
                android:inputType="text" />

            <EditText
                android:id="@+id/withdrawAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/calistoga"
                android:hint="Enter amount"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/withdrawButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/calistoga"
                android:text="Withdraw"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:divider="@drawable/home"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pendingWithdrawalsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calistoga"
                android:text="History"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NoHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/calistoga"
                android:text="No Transactions"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/pendingWithdrawalsListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Pending Withdrawals Section -->

    <!-- Completed Withdrawals Section -->

</LinearLayout>
