<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:visibility="visible"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:isScrollContainer="false"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_app"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/secondry_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:text="Sign In"
                        android:textAlignment="center"
                        android:textColor="@color/primary_text"
                        android:textSize="34sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="Deprecated,HardcodedText,PxUsage" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="#000000"
                        android:orientation="vertical"></LinearLayout>

                    <EditText
                        android:id="@+id/email_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10px"
                        android:layout_marginBottom="5px"
                        android:autofillHints="Enter Email"
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:gravity="left"
                        android:hint="Enter Gmail Id"
                        android:inputType="textEmailAddress"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textColorLink="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="HardcodedText,PxUsage,RtlHardcoded"
                        tools:visibility="visible" />

                    <EditText
                        android:id="@+id/Password_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="10px"
                        android:layout_marginBottom="5px"
                        android:autoText="false"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:gravity="left"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:password="true"
                        android:selectAllOnFocus="false"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="Deprecated,HardcodedText,PxUsage,RtlHardcoded"
                        tools:visibility="visible" />

                    <Button
                        android:id="@+id/button_login"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10px"
                        android:autoLink="all"
                        android:background="@drawable/round_btn"
                        android:cursorVisible="true"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:longClickable="true"
                        android:paddingHorizontal="0px"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:strokeColor="#000000"
                        tools:ignore="HardcodedText,PxUsage,TextViewEdits,DuplicateSpeakableTextCheck"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/L_R"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:text="@string/new_user_login_here"
                        android:textColor="#3D5AFE"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textColorLink="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="Deprecated,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:clickable="true"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:text="Fogot Password?"
                        android:textColor="#3D5AFE"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textColorLink="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:ignore="Deprecated,TouchTargetSizeCheck" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Register_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollIndicators="none"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_app"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/secondry_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textAlignment="center"
                        android:textColor="@color/primary_text"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textSize="34sp"
                        android:visibility="visible"
                        tools:ignore="Deprecated,HardcodedText,PxUsage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/black"
                        android:orientation="vertical"></LinearLayout>

                    <EditText
                        android:id="@+id/Full_Name"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter Full Name"
                        android:inputType="textEmailAddress"
                        android:padding="5px"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,PxUsage" />

                    <EditText
                        android:id="@+id/email_text_box2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter Gmail Id"
                        android:inputType="textEmailAddress"
                        android:padding="5px"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,PxUsage" />

                    <EditText
                        android:id="@+id/phone_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter Phone Number"
                        android:inputType="phone"
                        android:paddingHorizontal="5px"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,PxUsage" />

                    <EditText
                        android:id="@+id/password_text_box3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:paddingHorizontal="5px"
                        android:password="true"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="Deprecated,HardcodedText,PxUsage" />

                    <EditText
                        android:id="@+id/check_password_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:enabled="true"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter password Again"
                        android:inputType="text"
                        android:padding="5px"
                        android:password="false"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="Deprecated,HardcodedText,PxUsage" />

                    <EditText
                        android:id="@+id/Refer"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:fontFamily="@font/calistoga"
                        android:hint="Refer By (If Available)"
                        android:inputType="textEmailAddress"
                        android:padding="5px"
                        android:textAlignment="textStart"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/secondary_text"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,PxUsage" />

                    <Button
                        android:id="@+id/Button_r2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:autoLink="all"
                        android:background="@drawable/round_btn"
                        android:cursorVisible="true"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:longClickable="true"
                        android:paddingHorizontal="0px"
                        android:text="Register"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:strokeColor="#000000"
                        tools:ignore="HardcodedText,PxUsage,TextViewEdits" />

                    <Button
                        android:id="@+id/Button_otp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:autoLink="all"
                        android:background="@drawable/round_btn"
                        android:cursorVisible="true"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:longClickable="true"
                        android:paddingHorizontal="0px"
                        android:text="Send Otp"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:strokeColor="#000000"
                        tools:ignore="HardcodedText,PxUsage,TextViewEdits" />

                    <EditText
                        android:id="@+id/otp_text_box"
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:layout_margin="10px"
                        android:layout_marginBottom="5px"
                        android:autofillHints=""
                        android:ems="10"
                        android:enabled="true"
                        android:fontFamily="@font/calistoga"
                        android:hint="Enter otp"
                        android:inputType="numberPassword"
                        android:padding="5px"
                        android:password="false"
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textIsSelectable="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="Deprecated,HardcodedText,PxUsage" />

                    <Button
                        android:id="@+id/button_register"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_margin="10px"
                        android:autoLink="all"
                        android:background="@drawable/round_btn"
                        android:cursorVisible="true"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:longClickable="true"
                        android:paddingHorizontal="0px"
                        android:text="Register"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:strokeColor="#000000"
                        tools:ignore="HardcodedText,PxUsage,TextViewEdits,DuplicateSpeakableTextCheck" />

                    <TextView
                        android:id="@+id/Resend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="@string/resend_otp"
                        android:textColor="#3D5AFE"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textColorLink="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:ignore="Deprecated,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/R_L"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:duplicateParentState="false"
                        android:editable="false"
                        android:fontFamily="@font/calistoga"
                        android:gravity="center"
                        android:text="@string/already_registerd_login_here"
                        android:textColor="#3D5AFE"
                        android:textColorHighlight="#000000"
                        android:textColorHint="#000000"
                        android:textColorLink="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="Deprecated,TouchTargetSizeCheck" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_app"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollIndicators="none"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_app"
            android:gravity="center"
            android:orientation="vertical"
            android:scrollIndicators="none"
            android:visibility="visible">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/logo_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="325dp"
                    android:layout_height="270dp"
                    android:layout_margin="20px"
                    android:background="@drawable/transparany"
                    android:contentDescription="@string/vertex"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_white"
                    tools:ignore="PxUsage,ImageContrastCheck" />

                <!--            <ProgressBar-->
                <!--                android:id="@+id/progressBar2"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="20dp"-->
                <!--                android:layout_margin="20dp"-->
                <!--                android:indeterminateDrawable="@drawable/progress"-->
                <!--                android:progressDrawable="@drawable/progress"-->
                <!--                android:scaleX="100"-->
                <!--                tools:ignore="PxUsage" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:SpinKit_Color="@color/app_theme" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="115dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calistoga"
                    android:gravity="center"
                    android:text="QuantumLeap Tech Solutions"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/calistoga"
                    android:gravity="center"
                    android:text="Made In ❤️ India"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/verify_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/Verify_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/calistoga"
            android:gravity="center"
            android:text="@string/verification_mail_send_to_your_gmail_id_please_verify_to_continue"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button_send_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/calistoga"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/send_verification_link_again"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/Lo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:duplicateParentState="false"
            android:editable="false"
            android:fontFamily="@font/calistoga"
            android:gravity="center"
            android:text="If Verified Login Here To Access"
            android:textColor="#3D5AFE"
            android:textColorHighlight="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="Deprecated,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/Email_change_text_b0x"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_margin="10px"
            android:layout_marginBottom="5px"
            android:autoText="false"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/calistoga"
            android:gravity="left"
            android:hint="Enter Gmail Id To Change"
            android:inputType="textPassword"
            android:padding="5px"
            android:password="true"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="Deprecated,HardcodedText,PxUsage,RtlHardcoded,TextFields" />

        <Button
            android:id="@+id/Gmail_change"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/calistoga"
            android:text="Change_Gmail"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>