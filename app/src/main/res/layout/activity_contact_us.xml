<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ContactUs">

    <!-- res/layout/activity_contact_us.xml -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_app"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_us_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/calistoga"
                android:textColor="@color/primary_text"
                android:layout_gravity="center"
                android:paddingBottom="16dp"/>

            <EditText
                android:id="@+id/contact_us_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/secondary_text"
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_app"/>

            <EditText
                android:id="@+id/contact_us_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email"
                android:padding="10dp"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/secondary_text"
                android:background="@drawable/bg_app"
                android:layout_marginBottom="5dp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/contact_us_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Message"
                android:padding="10dp"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/secondary_text"
                android:background="@drawable/bg_app"
                android:inputType="textMultiLine"
                android:minLines="5"/>

            <Button
                android:id="@+id/contact_us_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/calistoga"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="Note:- Misbehave may lead to permanent ban"
                android:fontFamily="@font/calistoga"/>

        </LinearLayout>
    </ScrollView>

  </LinearLayout>